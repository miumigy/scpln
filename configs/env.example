# Copy to .env and adjust as needed

# Backend selection for RunRegistry (memory|db)
REGISTRY_BACKEND=db

# SQLite database path (used when REGISTRY_BACKEND=db)
SCPLN_DB=data/scpln.db

# Max rows to keep in runs table (older ones are purged). 0=disabled
RUNS_DB_MAX_ROWS=1000

# Jobs worker settings
JOBS_ENABLED=1
JOBS_WORKERS=1

# Logging
SIM_LOG_LEVEL=INFO
#SIM_LOG_JSON=1

