# Copy to .env and adjust as needed

# Backend selection for RunRegistry (memory|db)
REGISTRY_BACKEND=db

# SQLite database path (used when REGISTRY_BACKEND=db)
SCPLN_DB=data/scpln.db

# Max rows to keep in runs table (older ones are purged). 0=disabled
RUNS_DB_MAX_ROWS=1000

# PlanRepository capacity guard (0=disabled)
PLANS_DB_MAX_ROWS=600
# Alert threshold for a single trim operation (0=disabled)
PLANS_DB_GUARD_ALERT_THRESHOLD=50

# Jobs worker settings
JOBS_ENABLED=1
JOBS_WORKERS=1

# Logging
SIM_LOG_LEVEL=INFO
#SIM_LOG_JSON=1

# Authentication (toggle)
# AUTH_MODE=none|apikey|basic
# 認証を有効化する場合は apikey または basic を指定
AUTH_MODE=apikey
# API key mode
API_KEY_HEADER=X-API-Key
#API_KEY_VALUE=changeme  # ← 実運用では固有値を設定
# Basic mode
#BASIC_USER=planner
#BASIC_PASS=secret

# SCPLN_SKIP_SIMULATION_API=1  # Set to 1 to skip heavy simulation in tests

# OpenTelemetry (optional)
#OTEL_ENABLED=1
#OTEL_SERVICE_NAME=scpln
#OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
